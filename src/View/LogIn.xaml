<Window x:Class="View.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"

        Title="Authorization" Height="600" Width="800">

<StackPanel Orientation="Vertical">
    <TextBlock Margin="20,100,20,20"
                   HorizontalAlignment="Center">Login</TextBlock>
    <TextBox Text="{Binding Path=Login, UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource}"
                 Margin="10" 
                 HorizontalAlignment="Center" Width="100">
    </TextBox>
    <TextBlock Margin="20,50,20,20"
                   HorizontalAlignment="Center">Password</TextBlock>
    <TextBox Text="{Binding Path=Password, UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource}"
                 Margin="10,10,10,50" 
                 HorizontalAlignment="Center" Width="100">
    </TextBox>

    <Button Margin="20" HorizontalAlignment="Center">Sign in</Button>
    <Button Margin="20" HorizontalAlignment="Center">Register</Button>
</StackPanel>

</Window>
